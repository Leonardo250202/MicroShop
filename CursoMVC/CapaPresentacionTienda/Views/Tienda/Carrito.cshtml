
@{
    ViewBag.Title = "Carrito";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row">

        <div class="col-sm-12">

            <div class="card">
                <div class="card-body">

                    <div class="row">

                        <!-- DETALLE PRODUCTO-->
                        <div class="col-sm-9"></div>

                        <!-- DETALLE ENVIO-->
                        <div class="col-sm-3">
                            <div class="card">
                                <div class="card-body bg-light">
                                    <h5 class="card-title">Detalle Envio</h5>
                                    <form>
                                        <div class="mb-2">
                                            <label for="cbodepartamento" class="form-label"> Provincia: </label>
                                            <select class="form-select form-select-sm" id="cbodepartamento"> </select>
                                        </div>
                                        <div class="mb-2">
                                            <label for="cboprovincia" class="form-label"> Ciudad: </label>
                                            <select class="form-select form-select-sm" id="cboprovincia"> </select>
                                        </div>
                                        <div class="mb-2">
                                            <label for="cbodistrito" class="form-label"> Barrio: </label>
                                            <select class="form-select form-select-sm" id="cbodistrito"> </select>
                                        </div>
                                        <div class="mb-2">
                                            <label for="exampleInputEmail" class="form-label"> Nombre Contacto: </label>
                                            <input type="text" class="form-control form-control-sm" id="txtnombrecontacto" autocomplete="off">
                                        </div>
                                        <div class="mb-2">
                                            <label for="exampleInputEmail" class="form-label"> Direcion: </label>
                                            <input type="text" class="form-control form-control-sm" id="txtdirecion" autocomplete="off">
                                        </div>
                                        <div class="mb-2">
                                            <label for="txttelefono" class="form-label"> Telefono: </label>
                                            <input type="text" class="form-control form-control-sm" id="txttelefono" autocomplete="off">
                                        </div>
                                        <div class="d-grid">
                                            <button class="btn btn-success" type="button" onclick="RealizarPago()">
                                                <i class="fab fa-paypal">  </i> Terminar y Procesar Pago
                                            </button>
                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
